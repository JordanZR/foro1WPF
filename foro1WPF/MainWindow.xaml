<Window x:Class="foro1WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:foro1WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="Num1Txt" HorizontalAlignment="Left" Margin="235,140,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Num2Txt" HorizontalAlignment="Left" Margin="468,140,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.283,0.65"/>
        <Button Content="Realizar" HorizontalAlignment="Center" Margin="0,307,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <ComboBox x:Name="OpcionesCB" HorizontalAlignment="Center" Margin="0,217,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="Suma"/>
            <ComboBoxItem Content="Resta"/>
            <ComboBoxItem Content="Multiplicacion"/>
            <ComboBoxItem Content="Division"/>
        </ComboBox>
        <Label Content="Calculadora sencilla. Ingrese dos numeros y luego elija una opcion:" HorizontalAlignment="Left" Margin="225,67,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.019,0.61"/>

    </Grid>
</Window>
